extends layout

block content
    .container(data-ng-controller='expressController')
        h1 {{ page_title }}

        table.table.table-striped
            thead
                tr
                    th #
                    th Name
                    th Email
                    th Actions
            tbody
                tr(data-ng-repeat="(key, user) in users")
                    td {{ key+1 }}
                    td {{ user.username }}
                    td {{ user.email }}
                    td Actions here

    script(src='/bower/angular/angular.min.js')
    script(src='/javascripts/site.js')
